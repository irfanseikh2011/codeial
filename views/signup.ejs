       <label>Birthday</label><br><br>
        <select id="date" name="date" form="birthday">
            <% for (let i=1; i<=30 ; i++) { %> 
                <option value="<%= i %>"><%=i %></option>
             <% } %>
        </select>
        <select id="date" name="month" form="birthday">
            <% for (let i of month) { %> 
                <option value="<%= i %>"><%=i %></option>
             <% } %>
        </select>
        <select id="date" name="year" form="birthday">
            <% for (let i = 1905 ; i <= 2020; i++) { %> 
                <option value="<%= i %>"><%=i %></option>
             <% } %>
