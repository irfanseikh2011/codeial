<link rel="stylesheet" href="/css/home.css">
<div id="container">
<h1><%= title %></h1>
<section id ="feed-posts">
    <h2>Posts</h2>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea placeholder="Type here.." name="content" cols="40" rows="5"></textarea><br>
        <input id="but2"  type="submit" value="Post">
    </form>
</section>


<div id ="posts-list-container">
    <ul id="comments">
        <% for(post of posts) { %>
            <p>
                <li>
                    <%= post.content %><br>
                    <small>
                        <%= post.user.first_name %>
                    </small>
                 </li>

            </p>
        
        <%  } %>
    </ul>
</div>
</div>
 